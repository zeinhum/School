@model SchoolResultSystem.Web.Areas.Teachers.Models.TDashDto
@{
    ViewData["Title"] = "Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/cstview.css" />

<script src="/js/teacherDasboard.js" type="module"></script>
<div class="dashboard-header"></div>

<div class="dashboard">
    <div>

        <div class="partial-container"></div>

        <!-- Teachers Card -->
        <div class="card">
            <h2>Your Classes and Subjects</h2>

            @if (Model.CSList != null)
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Class Name</th>
                            <th>Subject Name</th>
                            <th>Subject Code</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cs in Model.CSList)
                        {
                            <tr>
                                <td name="ClassName">@cs.ClassName</td>
                                <td name="SName">@cs.SName</td>
                                <td name="SCode">@cs.SCode</td>
                                <td>
                                <select class="select-option" id ="selection">
                                <option name="ClassId" value=@cs.ClassId data-action="no">Select Action</option>
                                <option class="btn-primary" name="ClassId" value=@cs.ClassId data-action="AttendenceReq">Attendence</option>
                                    <option class="btn-primary" name="ClassId" value=@cs.ClassId data-action="FillMarks">Fill
                                        Marks</option>
                                    <option class="btn-primary" name="ClassId" value=@cs.ClassId
                                        data-action="UpdateMarks">Update Marks</option>
                                
                                </select>
                                
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Classes are crrently assigned</p>
            }
        </div>
    </div>
    <!-- Right Navigation -->
    <partial name="_TNavBar" model="-2" />
</div>