@model SchoolResultSystem.Web.Models.UserModel

@{
    ViewData["Title"] = "Admin Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-setup.css" />

<div class="main-interface">
    <div class="welcome">
        <h2>Create a class in the school</h2>
        @if(!string.IsNullOrEmpty(ViewBag.success)){<p>@ViewBag.success</p>}
        @if(!string.IsNullOrEmpty(ViewBag.error)){<p class="error">@ViewBag.error</p>}
    </div>

    <div class="form-container">
        <form method="post" action="/Principal/PrincipalDashboard/SaveClass" class="form-card">

            <div class="form-group">
                <label for="ClassName">Class Name*</label>
                <input type="text" id="ClassName" name="ClassName" placeholder="e.g. Class 9 A" required />
            </div>

            <button type="submit" class="btn-primary">Create Class</button>
        </form>
    </div>
</div>
