@model SchoolResultSystem.Web.Areas.Principal.Models.CSTView;
@using System.Text.Json;
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/cstview.css" />
<script>
    window.currentClassId = @Model.ClassId;  // Razor injects value
</script>

<script type="module" src="/js/cstview.js"></script>


<div class="dashboard-container">
    <!-- Main Dashboard Section -->
    <div class="dashboard">
        <!-- Header -->
        <div class="dashboard-header">
            <h1>Class: @Model.ClassName (@Model.ClassId)</h1>
            <p>Manage subjects and teachers for this class.</p>
        </div>
        <partial name="_Analytics" />
        <!-- Subject-Teacher Table -->
        <div class="card">
            <h2>Assigned Subjects</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Subject Code</th>
                        <th>Subject Name</th>
                        <th>Teacher ID</th>
                        <th>Teacher Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var st in Model.SubjectTeachers)
                    {
                        <tr>
                            <td>@st.SCode</td>
                            <td>@st.SubjectName</td>
                            <td>@st.TeacherId</td>
                            <td>@st.TeacherName</td>
                            <td>
                                <button class="btn btn-analyze">Analyze</button>
                                <button class="btn btn-edit">Edit</button>
                                <button class="btn btn-delete">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h4 class="add-cst"> Add Subject Teacher</h4>
        <div class="formholder"></div>
    </div>

    <!-- Right Side Navigation -->


    <partial name="_RightNavBar" model="@Model.ClassId" />



</div>