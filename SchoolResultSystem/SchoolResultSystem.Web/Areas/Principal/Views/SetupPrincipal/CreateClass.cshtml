
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}
<link rel="stylesheet" href="~/css/form.css" />

<script type="module" src="/js/addClasses.js"></script>

<div class="dashboard-container">
    <form class="form-container" action="/Principal/SetupPrincipal/SaveClass" method="post">
        <p class="error"></p>
        <h2>Create Class</h2>

        <table class="form-card">
            
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody class="form-data">
                <tr>
                    
                    <td><input type="text" name="ClassName" required size="2" /></td>

                </tr>
            </tbody>
        </table>

        <button type="submit" class="btn-form btn-success">Create Class</button>
    </form>

    <partial name="_RightNavBar" model="-1" />
</div>