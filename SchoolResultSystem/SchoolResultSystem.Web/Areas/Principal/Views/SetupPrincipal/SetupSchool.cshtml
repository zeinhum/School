@model SchoolResultSystem.Web.Models.SchoolInfoModel

@{
    ViewData["Title"] = "Setup School";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-setup.css" />

<div class="main-interface">
    
    <div class="welcome">
        <h1>üè´ Setup Your School</h1>
        <p class="subtitle">Enter your school details to get started with the system.</p>

        @if(TempData["success"]!=null){
            <p class="success-message">@TempData["success"]</p>
        }
        
        @if(ViewBag.error != null)
        {
            <p class="error">@ViewBag.ErrorMessage</p> 
        }
    </div>

    <div class="form-container">
        <form method="post" enctype="multipart/form-data" action="/Principal/SetupPrincipal/SaveSchool" class="form-card">

            <div class="form-group">
                <label for="Name">School Name</label>
                <input type="text" id="Name" name="Name" value="@Model?.Name" placeholder="Example: Greenfield High School" required />
            </div>

            <div class="form-group">
                <label for="Address">School Address</label>
                <input type="text" id="Address" name="Address" value="@Model?.Address" placeholder="Lumbini Nepal" required />
            </div>

            <div class="form-group">
                <label for="Phone">Phone Number</label>
                <input type="tel" id="Phone" name="Phone" value="@Model?.Phone" placeholder="+977 1234 5678" />
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" value="@Model?.Email" placeholder="info@school.com" required />
            </div>
    
            <div class="form-group">
                <label for="Logo">School Logo</label>
                <input type="file" id="Logo" name="logoFile" accept="image/*" />
            </div>

            <button type="submit" class="btn-primary">üíæ Save & Continue</button>
        </form>
    </div>
</div>