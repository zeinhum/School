@model SchoolResultSystem.Web.Models.UserModel

@{
    ViewData["Title"] = "Admin Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-setup.css" />

<div class="main-interface">
    <div class="welcome">
        <h2>Admin Account Setup</h2>
        <p>Please set up the <strong>Admin account</strong> for your school.</p>
        
        <p class="error">
            @{ if (!string.IsNullOrEmpty(ViewBag.error)) {
                 @ViewBag.error
            }}
        </p>
    </div>

    <div class="form-container">
        <form method="post" action="/Principal/SetupPrincipal/SavePrincipal" class="form-card">
            <div class="form-group">
                <label for="TeacherId">Admin ID*</label>
                <input type="text" id="TeacherId" name="TeacherId" placeholder="e.g. admin123" required />
            </div>
            <div class="form-group">
                <label for="TeacherName">User's Name*</label>
                <input type="text" id="TeacherName" name="TeacherName" placeholder="e.g. Zein Hum" required />
            </div>

            <div class="form-group">
                <label for="UserName">Username*</label>
                <input type="text" id="UserName" name="UserName" placeholder="e.g. admin" required />
            </div>

            <div class="form-group">
                <label for="Password">Password*</label>
                <input type="password" id="Password" name="Password" placeholder="Password" required />
            </div>

            <div class="form-group">
                <label for="Email">Email*</label>
                <input type="email" id="Email" name="Email" placeholder="admin@example.com" required />
            </div>

            <input type="hidden" name="Role" value="Admin" />

            <button type="submit" class="btn-primary">Create Admin Account</button>
        </form>
    </div>
</div>